
<% layout("layouts/boilerPlate") %>
<div class="row mt-3">
    <h1 class="col-8 offset-2">Login</h1>
  <div class="col-8 offset-2">
    <form action="/login" method="POST">
        <div class="mb-3">
        <label for="username" class="form-label" class="needs-validation" novalidate>Username</label>
        <input 
          name="username"
          id="username"
          type="text"
          class="form-control"
          required >
          
      </div>
       
       <div class="mb-3">
        <label for="password" class="form-label" class="needs-validation" novalidate>Password</label>
        <input 
          name="password"
          id="password"
          type="password"
          class="form-control"
          required >
          <div class="valid-feedback">  Looks good!</div>
      </div>
      <button class="btn btn-success">Login</button>

    </form>
  </div> 
</div>